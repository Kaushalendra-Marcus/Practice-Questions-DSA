// Create a pattern of numbers in a diamond shape
   1
  2 2
 3 3 3
4 4 4 4
 3 3 3
  2 2
   1


Code:

#include<iostream>
using namespace std;
int main(){

        int n;
        cout<<"Enter the number :";
        cin>>n;
        for(int i=1;i<=n;i++){
                for(int j=1;j<=n-i;j++){
                        cout<<" ";
                }
                for(int j=1;j<=i;j++){
                        cout<<i<<" ";
                }
                cout<<endl;

        }
        for(int i=n-1;i>=1;i--){
                for(int j=1;j<=n-i;j++){
                        cout<<" ";
                }
                for(int j=1;j<=i;j++){
                        cout<<i<<" ";
                }
                cout<<endl;
        }

        return 0;
}

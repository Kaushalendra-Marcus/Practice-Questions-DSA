// Program to Print an hourglass pattern
Eg. 
* * * *
 *   * 
  * *  
   *   
  * *  
 *   * 
* * * *

#include <iostream>
using namespace std;
int main()
{
        int n;
        cout << "enter the number" << endl;
        cin >> n;
        for (int i = 1; i < n * 2; i++)
        {
                for (int j = 1; j < n * 2; j++)
                {
                        if (i == 1 || i == 2 * n - 1)
                        {
                                if (j % 2 == 0)
                                {
                                        cout << " ";
                                }
                                else
                                        cout << "*";
                        }
                        else
                        {
                                if (i == j || i + j == 2 * n)
                                {
                                        cout << "*";
                                }
                                else
                                {
                                        cout << " ";
                                }
                        }
                }
                cout << endl;
        }

        return 0;
}

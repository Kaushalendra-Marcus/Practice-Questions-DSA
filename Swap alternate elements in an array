// Swapping alternating elements in an array

#include<iostream>
using namespace std;
#include<vector>
int alternate(vector<int>& array, int n){
    for(int i=0;i<n;i++){
        if(i%2==0 && i+1<n){
            swap(array[i],array[i+1]); // using swap, we can swap elements
        }
    }
    return 0;
}
int main(){
    int size;
    cout<<"Enter the size of array : "<<endl;
    cin>>size;
    vector<int> arr(size);
    for(int i=0;i<size;i++){
        cin>>arr[i];
    }
    alternate(arr,size);
    cout<<"Alternate reversed array is: "<<endl;
    for(int i=0;i<size;i++){
        cout<<arr[i] <<" ";
    }
    return 0;
}

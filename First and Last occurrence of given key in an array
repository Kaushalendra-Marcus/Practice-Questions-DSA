#include<iostream>
using namespace std;
int first_occurance(int arr[],int size,int key){
    int start =0;
    int end = size-1;
    int ans =-1;
    int mid= start + (end - start)/2; // to prevent stack overflow
        while (start<=end)
        {
            if(arr[mid]==key){
                ans =mid;
                end=mid-1;
            } 
            else if(arr[mid]<key){
                start = mid+1;
            }
            else if(arr[mid]>key){
                end = mid-1;
            }
            mid= start + (end - start)/2;
        }
        return ans;       
    }
int last_occurance(int arr[],int size,int key){
    int start =0;
    int end = size-1;
    int ans =-1;
    int mid= start + (end - start)/2; // to prevent stack overflow
        while (start<=end)
        {
            if(arr[mid]==key){
                ans =mid;
                start=mid+1;
            }
            else if(arr[mid]<key){
                start = mid+1;
            }
            else if(arr[mid]>key){
                end = mid-1;
            }
            mid= start + (end - start)/2;
        }
        return ans;       
    }
int main(){
    int arr[8] ={2,3,6,6,6,6,6,9};
    cout<<"first occurance of key is: "<<first_occurance(arr,8,6)<<endl;
    cout<<"first occurance of key is: "<<last_occurance(arr,8,6)<<endl;
    return 0;
}
